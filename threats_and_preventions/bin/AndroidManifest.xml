<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.threats_and_preventions"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.threats_and_preventions.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.threats_and_preventions.ThreatsMenu"
            android:label="@string/title_activity_threats_menu" >
        </activity>
        <activity
            android:name="com.example.threats_and_preventions.PreventionsMenu"
            android:label="@string/title_activity_preventions_menu" >
        </activity>
        <activity
            android:name="com.example.threats_and_preventions.DosInfo"
            android:label="@string/title_activity_dos_info" >
        </activity>
        <activity
            android:name="com.example.threats_and_preventions.VirusInfo"
            android:label="@string/title_activity_virus_info" >
        </activity>
        <activity
            android:name="com.example.threats_and_preventions.SnifferInfo"
            android:label="@string/title_activity_sniffer_info"
            android:parentActivityName="com.example.threats_and_preventions.ThreatsMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.threats_and_preventions.ThreatsMenu" />
        </activity>
        <activity
            android:name="com.example.threats_and_preventions.Spoofing_info"
            android:label="@string/title_activity_spoofing_info" >
        </activity>
        <activity
            android:name="com.example.threats_and_preventions.PhishingInfo"
            android:label="@string/title_activity_phishing_info" >
        </activity>
        <activity
            android:name="com.example.threats_and_preventions.PharmingInfo"
            android:label="@string/title_activity_pharming_info" >
        </activity>
        <activity
            android:name="com.example.threats_and_preventions.MiddlemanInfo"
            android:label="@string/title_activity_middleman_info" >
        </activity>
        <activity
            android:name="com.example.threats_and_preventions.SpamInfo"
            android:label="@string/title_activity_spam_info" >
        </activity>
        <activity
            android:name="com.example.threats_and_preventions.PasswordcrackInfo"
            android:label="@string/title_activity_passwordcrack_info" >
        </activity>
        <activity
            android:name="com.example.threats_and_preventions.TrojanInfo"
            android:label="@string/title_activity_trojan_info" >
        </activity>
    </application>

</manifest>
